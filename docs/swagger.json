{
    "swagger": "2.0",
    "info": {
        "description": "简单的短链接项目，具体可查看 README.md",
        "title": "shorturl API",
        "contact": {
            "name": "吴国章",
            "url": "https://www.wuguozhang.com/about-me.html",
            "email": "lich.wu2014@gmail.com"
        },
        "version": "1.0"
    },
    "host": "wgz.fly.test",
    "paths": {
        "/api/v1/auth/get-token": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "获取JWT",
                "parameters": [
                    {
                        "example": "12345678901234567890123456789012",
                        "description": "传入appid，目前未接入appid授权功能，随便一个字符串达到32长度就行",
                        "name": "app_id",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{\"data\":{\"token\":\"\"},\"success\":true}",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/api/v1/short": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "获取短链接",
                "parameters": [
                    {
                        "description": "长链接",
                        "name": "url",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "{\"data\":{\"long_url\":\"\",\"url\":\"\"},\"success\":true}",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "Bearer Token，使用JWT": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}